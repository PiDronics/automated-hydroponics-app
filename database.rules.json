{
  "rules": {
    "users":{
      "$uid":{
        "systemData":{
          "$device":{
            "sensorData":{
              "$sensor":{
                "allData":{
                  ".indexOn": "time"
                }
              }
            },
            ".read":"$device === auth.uid",
            ".write":"$device === auth.uid"
          }
        },
        "systemCard":{
          "$device":{
            ".read":"$device === auth.uid",
            ".write":"$device === auth.uid"
          }
        },
        ".read": "$uid === auth.uid"
      }
    },
    "systems":{
      "$device":{
        "$uid":{
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        },
        ".read": "$device === auth.uid"
      }
    }
  }
}
