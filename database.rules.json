{
  "rules": {
    "users":{
      "$uid":{
        "systemData":{
          "$device":{
            "sensorData":{
              "$sensor":{
                "allData":{
                  ".indexOn": "time"
                },
                "allComments":{
                  ".indexOn": "time"
                }
              }
            },
            ".read": true,
            ".write": true
          },
          ".read":"$uid === auth.uid",
          ".write":"$uid === auth.uid"
        },
        "systemCard":{
          "$device":{
            ".read":"$device === auth.uid",
            ".write":"$device === auth.uid"
          },
          ".read":"$uid === auth.uid",
          ".write":"$uid === auth.uid"
        },
        ".read": "$uid === auth.uid"
      }
    },
    "systems":{
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
}
